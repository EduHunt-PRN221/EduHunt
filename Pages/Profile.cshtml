@page
@model Eduhunt.Pages.ProfileModel
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@inject Microsoft.AspNetCore.Identity.UserManager<Eduhunt.Models.Entities.ApplicationUser> UserManager

<style>
    .img-thumbnail {
        height: inherit;
    }
</style>
<form hidden asp-page-handler="payVIP" method="post" id="formPay">
    <button type="submit">Pay</button>
</form>
<div class="bg-light">
    <div class="container-fluid">
        <div class="row">
            <partial name="_Sidebar" />
            <!-- Main Content -->
            <div class="col-md-9 p-4">
                <h2 class="mb-4">Profile</h2>
                <form method="post" enctype="multipart/form-data">
                    <div class="d-flex flex-row align-items-center justify-content-center mb-4">
                        <div class="border p-2 align-items-center justify-content-center " style="width: 200px">
                            <div class="position-relative mb-3 bg-white rounded"
                                 style="width: 160px; height: 160px; display: flex; justify-content: center; align-items: center; margin-left: 12px; margin-top: 4px">
                                <img id="selectedImage" alt="Profile picture" class="img-thumbnail d-flex justify-content-center" height="160"
                                     src="@(Model.Profile?.AvatarImage ?? "/images/default-avatar.png")" width="160" style="object-fit: fill;" />

                                <label for="uploadAvatar" class="position-absolute w-100 bg-dark text-white text-center py-1" style="opacity: 0.7; cursor: pointer; bottom: 0;">
                                    <input id="uploadAvatar" asp-for="UploadAvatar" type="file" class="form-control d-none" accept="image/*" onchange="displaySelectedImage(event, 'selectedImage')" />
                                    Upload Photo
                                </label>
                            </div>
                            <div class="text-muted small text-center" style="width: auto;">
                                Image size should be under 1MB and image ratio needs to be 1:1
                            </div>
                        </div>

                    </div>
                    @if (Model.IsMentor)
                    {
                        <div class="mb-3">
                            <label for="uploadCertificate" class="form-label">Upload Certificate</label>
                            <input id="uploadCertificate" asp-for="UploadCertificate" type="file" class="form-control" accept="image/*" onchange="displaySelectedImage(event, 'certificateImage')" />
                            <img id="certificateImage" src="@Model.Profile?.CertificateImage" style="display: none" />
                        </div>
                    }
                    @if (Model.IsVIP)
                    {
                        <div class="alert alert-warning fs-4 text-center py-2 fw-bold mt-2 mb-4">
                            VIP Account
                        </div>
                    }
                    else
                    {
                        <button id="submitPayButton" class="btn btn-warning text-white text-center py-2 mt-2 mb-4 w-100"
                                style="background-color: #160270;">
                            Pay To Be VIP
                        </button>
                    }

                    <div class="row mb-3">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Profile.FirstName" class="form-label">First name</label>
                            <input asp-for="Profile.FirstName" class="form-control" placeholder="First name" />
                            <span asp-validation-for="Profile.FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Profile.LastName" class="form-label">Last name</label>
                            <input asp-for="Profile.LastName" class="form-control" placeholder="Last name" />
                            <span asp-validation-for="Profile.LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Profile.UserName" class="form-label">Username</label>
                        <input asp-for="Profile.UserName" class="form-control" placeholder="Enter your username" required />
                        <span asp-validation-for="Profile.UserName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Profile.Email" class="form-label">Email</label>
                        <input asp-for="Profile.Email" class="form-control" placeholder="Email address" required />
                        <span asp-validation-for="Profile.Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Profile.PhoneNumber" class="form-label">Contact number</label>
                        <input asp-for="Profile.PhoneNumber" class="form-control" placeholder="Phone number" />
                        <span asp-validation-for="Profile.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Profile.Country" class="form-label">Country</label>
                            <input asp-for="Profile.Country" class="form-control" placeholder="Country" />
                            <span asp-validation-for="Profile.Country" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Profile.City" class="form-label">City</label>
                            <input asp-for="Profile.City" class="form-control" placeholder="City" />
                            <span asp-validation-for="Profile.City" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Profile.Title" class="form-label">Title</label>
                        <input asp-for="Profile.Title" class="form-control" placeholder="Your title, profession or small biography" />
                    </div>
                    <button class="btn btn-primary" type="submit">
                        Save Changes
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function displaySelectedImage(event, elementId) {
            const selectedImage = document.getElementById(elementId);
            const fileInput = event.target;

            if (fileInput.files && fileInput.files[0]) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    selectedImage.src = e.target.result;
                };

                reader.readAsDataURL(fileInput.files[0]);
            }
        }

        $(document).ready(function () {
            $('#submitPayButton').click(function (event) {
                event.preventDefault();
                $('#formPay button[type="submit"]').click();
            });
        });
    </script>
}