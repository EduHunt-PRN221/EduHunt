@page
@model Eduhunt.Pages.Identity.Pages.ConfirmRegistrationModel
@{
    ViewData["Title"] = "Confirm Registration";
}

<h2>Confirm Registration</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Emailuser" class="control-label"></label>
        <input asp-for="Emailuser" class="form-control" readonly />
        <span asp-validation-for="Emailuser" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmationCode" class="control-label"></label>
        <input asp-for="ConfirmationCode" class="form-control" />
        <span asp-validation-for="ConfirmationCode" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Confirm</button>

    <div asp-validation-summary="All" class="text-danger"></div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
