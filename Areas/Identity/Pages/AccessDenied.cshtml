@page
@model AccessDeniedModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Access Denied</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .bg-custom {
            background: linear-gradient(135deg, #2b2464 0%, #352c7e 100%);
        }

        .keypad-btn {
            width: 60px;
            height: 60px;
            border: 2px solid #4cd7d0;
            background: transparent;
            color: #4cd7d0;
            font-size: 24px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .keypad-btn:hover {
                background: #4cd7d0;
                color: #2b2464;
            }

        .key-icon {
            width: 64px;
            height: 64px;
            opacity: 0.5;
        }
    </style>
</head>
<body>
    <div class="container-fluid min-vh-100">
        <div class="row min-vh-100">
            <!-- Left Side -->
            <div class="col-md-6 d-flex align-items-center justify-content-center bg-white p-5">
                <div class="text-center">
                    <img src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='%23666' stroke-width='2'%3E%3Crect x='3' y='11' width='18' height='11' rx='2' ry='2'/%3E%3Cpath d='M7 11V7a5 5 0 0 1 10 0v4'/%3E%3C/svg%3E"
                         alt="Lock Icon" class="key-icon mb-4">
                    <h1 class="display-5 fw-bold text-dark mb-4">Access Denied!</h1>
                    <p class="lead text-secondary">
                        You do not have access to this area<br>
                        of the application. Speak to your<br>
                        administrator to unlock this feature.
                    </p>
                </div>
            </div>

            <!-- Right Side -->
            <div class="col-md-6 bg-custom d-flex align-items-center justify-content-center p-5">
                <div class="text-center">
                    <h2 class="text-white mb-5">Access Denied</h2>
                    <div class="keypad-container">
                        <div class="row g-3 justify-content-center">
                            @for (int i = 1; i <= 9; i++)
                            {
                                <div class="col-auto">
                                    <button class="keypad-btn">@i</button>
                                </div>
                            }
                            <div class="col-auto">
                                <button class="keypad-btn">*</button>
                            </div>
                            <div class="col-auto">
                                <button class="keypad-btn">0</button>
                            </div>
                            <div class="col-auto">
                                <button class="keypad-btn">#</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>