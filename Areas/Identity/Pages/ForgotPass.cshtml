@page
@model Eduhunt.Areas.Identity.Pages.ForgotPassModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="d-flex justify-content-center align-items-center vh-100" style="background-color: #BEE9F2;">
    <div class="d-flex w-75 h-75">
        <!-- Left Image Section -->
        <div class="w-50 me-4 rounded-3"
             style="background-image: url('/images/schoolGirl.png'); background-size: cover; background-repeat: no-repeat;">
        </div>

        <!-- Right Form Section -->
        <div class="card w-50 shadow-sm p-4 d-flex align-items-center">
            <h2 class="text-center mb-4">Forgot Password</h2>
            <form method="post" class="w-100">
                <!-- Email Input Field -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="Enter your Email here" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>

                @if (ViewData.ModelState.ErrorCount > 0)
                {
                    <div class="alert alert-danger mt-3 text-center" role="alert">
                        @ViewData.ModelState[string.Empty].Errors[0].ErrorMessage
                    </div>
                }
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
